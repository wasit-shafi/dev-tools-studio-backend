{
	"name": "dev-tools-studio",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"build:d4r": "docker build -t dev-tools-studio-backend:v1.0.0 .",
		"tsnd": "ts-node-dev -r tsconfig-paths/register --env-file=src/config/environments/dev.env src/index.ts",
		"dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
		"start": "node -r tsconfig-paths/register dist/index.js",
		"up": "docker-compose up --build -V --watch",
		"up:prod": "docker-compose -f docker-compose.prod.yml up --build -V",
		"down": "docker-compose down --remove-orphans -v",
		"down:prod": "docker-compose -f docker-compose.prod.yml down --remove-orphans -v",
		"format-codebase": "npx prettier --write ."
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"express": "^4.19.2",
		"mongodb": "^6.7.0",
		"mongoose": "^8.4.1",
		"nodemailer": "^6.9.14",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.14.2",
		"@types/nodemailer": "^6.4.15",
		"concurrently": "^8.2.2",
		"eslint": "^9.4.0",
		"prettier": "^3.3.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5"
	}
}
