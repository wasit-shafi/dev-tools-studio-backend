<!doctype html>
<html lang="en">

<body>
	<div>
		<img src="https://res.cloudinary.com/dtlx6i2m7/image/upload/v1731120664/dev-tools-studio/wjwlj9h1tyxqd5nizflm.png" alt="logo" />
	</div>
	<h1>Reset your Dev Tools Studio password</h1>
	<div>
		<span>Dear <%= firstName %>,</span>
		<p>You asked us to reset your password. Click the below link to create a new one <b>(valid only for next 5 minutes)</b>.</p>
		<a href="<%= resetPasswordLink %>"><%= resetPasswordLink %></a>
		<br />
		<br />
		<!-- Near -->

		<%if (countryFlagUrl && near) { %>
		<div>
			<span>Near:</span>
			<span>
				<img src="<%= countryFlagUrl %>" alt="country_flag_img" />
				<b><%= near %></b>
			</span>
		</div>
		<% } %>
		<!-- When -->

		<div>
			<span>When:</span>
			<span><b><%= when %></b></span>
		</div>
		<!-- Device -->

		<%if (device) { %>
		<div>
			<span>Device:</span>
			<span><b><%= device %></b></span>
		</div>
		<% } %>
		<!-- Geo Location  -->

		<%if (googleMapUrl && staticMapUrl) { %>
		<div>
			<a href="<%=googleMapUrl%>" target="_blank">Click here to view IP Address Location(Nearest) on Google Maps</a>
			<br />
			<img src="<%=staticMapUrl%>" alt="static_map_img" />
		</div>
		<% } %>


	</div>
</body>

</html>