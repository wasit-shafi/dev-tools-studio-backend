{
	"name": "dev-tools-studio",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"build:d4r": "docker build -t dev-tools-studio-backend:v1.0.0 .",
		"tsnd": "ts-node-dev --files -r tsconfig-paths/register --env-file=src/config/environment/dev.env src/index.ts",
		"dev": "ts-node-dev --files -r tsconfig-paths/register src/index.ts",
		"start": "copyfiles --error -f src/config/swagger/*.* dist/config/swagger && node -r tsconfig-paths/register dist/index.js",
		"up": "docker-compose up --build -V --watch",
		"up:prod": "docker-compose -f docker-compose.prod.yml up --build -V",
		"down": "docker-compose down --remove-orphans -v",
		"down:prod": "docker-compose -f docker-compose.prod.yml down --remove-orphans -v",
		"format-codebase": "npx prettier --write ."
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.637.0",
		"@bull-board/express": "^5.21.4",
		"bcrypt": "^5.1.1",
		"bullmq": "^5.12.12",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"express": "^4.19.2",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.8.0",
		"mongoose": "^8.5.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.14",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.13.1",
		"yaml": "^2.4.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.14.11",
		"@types/nodemailer": "^6.4.15",
		"@types/swagger-ui-express": "^4.1.6",
		"concurrently": "^8.2.2",
		"copyfiles": "^2.4.1",
		"eslint": "^9.7.0",
		"prettier": "^3.3.3",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.3"
	}
}
