{
	"name": "dev-tools-studio",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"build:d4r": "docker build -t dev-tools-studio-backend:v1.0.0 .",
		"tsnd": "ts-node-dev --files -r tsconfig-paths/register --env-file=src/config/environment/dev.env src/index.ts",
		"dev": "ts-node-dev --files -r tsconfig-paths/register src/index.ts",
		"start": "copyfiles --error -f src/config/swagger/*.* dist/config/swagger && node -r tsconfig-paths/register dist/index.js",
		"up": "docker-compose up --build -V --watch",
		"up:prod": "docker-compose -f docker-compose.prod.yml up --build -V",
		"down": "docker-compose down --remove-orphans -v",
		"down:prod": "docker-compose -f docker-compose.prod.yml down --remove-orphans -v",
		"format-codebase": "npx prettier --write ."
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.712.0",
		"@aws-sdk/client-sns": "^3.712.0",
		"@bull-board/express": "^6.5.3",
		"@types/ejs": "^3.1.5",
		"@types/otp-generator": "^4.0.2",
		"bcrypt": "^5.1.1",
		"bullmq": "^5.34.2",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"ejs": "^3.1.10",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.12.0",
		"mongoose": "^8.9.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.16",
		"otp-generator": "^4.0.1",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.17.0",
		"yaml": "^2.6.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.2",
		"@types/nodemailer": "^6.4.17",
		"@types/swagger-ui-express": "^4.1.7",
		"concurrently": "^9.1.0",
		"copyfiles": "^2.4.1",
		"eslint": "^9.17.0",
		"prettier": "^3.4.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.2"
	}
}
